#!/bin/bash

postgresAlura=" Postgres Alura Desenvolve"
pgadmin=" PGadmin"

# Variable passed to dmenu
options="$postgresAlura\n$pgadmin"

chosen="$(echo -e "$options" | dmenu -p "Inicia imagens Docker " )"
case $chosen in
     $postgresAlura)
	 #SUDO_ASKPASS=/usr/bin/ssh-askpass sudo -A docker container start curso-alura-postgres-desenvolve
	 docker container start curso-alura-postgres-desenvolve
	 notify-send -t 9000 " Container PostgreSQL Up" "Foi instanciado o containert postgresql" --icon="/usr/share/icons/ePapirus/16x16/actions/code-block.svg"

	 ;;
     $pgadmin)
	 docker container start pgadmin-docker
	 notify-send -t 9000 " Container PGadmin Up" "Foi instanciado o container pgadmin" --icon="/usr/share/icons/ePapirus/16x16/actions/code-block.svg"
	 ;;
esac
