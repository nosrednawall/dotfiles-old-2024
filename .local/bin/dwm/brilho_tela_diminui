#!/bin/bash

brightnessctl -q set 5%-
brilho=$(brightnessctl | awk '/%/ {print$4}' | cut -c 2-4 | sed 's/%//' | sed 's/)//')

# Atualiza dwmblocks
kill -42 $(pidof dwmblocks)

notify-send -t 3000 "Brilho diminu√≠do em 5%" "Brilho total $brilho%" --icon="/usr/share/icons/ePapirus/16x16/actions/brightnesssettings.svg"
