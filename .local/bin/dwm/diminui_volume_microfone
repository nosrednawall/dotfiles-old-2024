#!/bin/bash

pactl set-source-volume @DEFAULT_SOURCE@ -5%
volume=$(pactl get-source-volume @DEFAULT_SOURCE@ | grep "Volume" | awk '{print$5}' | sed 's/%//')

# Atualiza dwmblocks
kill -44 $(pidof dwmblocks)

notify-send -t 3000 "Volume microfone $volume" "Diminu√≠do 5% do volume do microfone" --icon="/usr/share/icons/ePapirus/16x16/devices/audio-input-microphone.svg"
