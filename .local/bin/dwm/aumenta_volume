#!/bin/bash

pactl set-sink-volume @DEFAULT_SINK@ +5%
volume=$(pactl get-sink-volume @DEFAULT_SINK@ | grep "Volume" | awk '{print$5}' | sed 's/%//')

# Atualiza dwmblocks
kill -43 $(pidof dwmblocks)

notify-send -t 3000 "Û∞ùù $volume%" "Aumentado +5% de volume" --icon="/usr/share/icons/ePapirus/16x16/devices/audio-speakers.svg"
