#!/bin/bash

pactl set-source-volume @DEFAULT_SOURCE@ +5%
volume=$(pactl get-source-volume @DEFAULT_SOURCE@ | grep "Volume" | awk '{print$5}' | sed 's/%//')

notify-send -t 3000 "Volume microfone $volume" "Aumentado o volume 5% do volume do microfone" --icon="/usr/share/icons/ePapirus/16x16/devices/audio-input-microphone.svg"
